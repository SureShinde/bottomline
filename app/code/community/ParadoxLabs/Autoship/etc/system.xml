<?xml version="1.0"?>
<config>
	<tabs>
		<paradoxlabs translate="label">
			<label>ParadoxLabs</label>
			<sort_order>100</sort_order>
		</paradoxlabs>
	</tabs>
	<sections>
		<paradoxlabs_autoship translate="label">
			<label>Autoship</label>
			<tab>paradoxlabs</tab>
			<sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<autoship translate="label" module="autoship">
					<label>Autoship</label>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<periods translate="label">
							<label>Durations</label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Possible autoship frequencies, in days, comma delimited.</comment>
						</periods>
						<default_period translate="label">
							<label>Default duration</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</default_period>
						<shipping translate="label">
							<label>Shipping charge for recurring orders</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Flat-rate X.XX. This will not change existing subscriptions.</comment>
						</shipping>
					</fields>
				</autoship>
			</groups>
		</paradoxlabs_autoship>
	</sections>
</config>
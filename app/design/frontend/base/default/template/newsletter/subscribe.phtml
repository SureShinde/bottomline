<div class="block block-subscribe">
    <div class="block-title">
        <strong><span><?php echo $this->__('Newsletter') ?></span></strong>
    </div>
    <form action="<?php echo $this->getFormActionUrl() ?>" method="post" id="newsletter-validate-detail">
        <div class="block-content">
            <div class="form-subscribe-header">
                <label for="newsletter"><?php echo $this->__('Please send me great advice and offers from Bottom Line!') ?></label>
            </div>
            <div class="input-box">
               <input type="text" name="email" id="newsletter" title="<?php echo $this->__('Please send me great advice and offers from Bottom Line!') ?>" class="input-text required-entry validate-email" />
            </div>
            <div class="actions">
                <button type="submit" title="<?php echo $this->__('Subscribe') ?>" class="button"><span><span><?php echo $this->__('Subscribe') ?></span></span></button>
            </div>
        </div>
    </form>
    <script type="text/javascript">
jQuery(function($){
  var frm = $('#newsletter-validate-detail').submit(function(event) {
    event.preventDefault();
    event.stopPropagation();
    
    var email = frm.find('input[name="email"]').val(); // Email address of the newsletter subscriber.
    var nl = "BLS"; // Character code of the newseletter to be subscribed.
    var source = "store.bottomlinepublications.com"; // Source of the subscription.
    var mid = "45195764"; // Silverpop mailing id of the email that is sent upon newsletter subscription.
    var url = '/sp_user_update.php?email=' + email + "&nl=" + nl + "&source=" + source + "&mid=" + mid;
    console.log(url);
    $.getJSON(url, function(data) {
	console.log(data);
      if (data.valid && data.valid == 'true') {
         frm.replaceWith('<div id="newsletter-thanks" style="padding: 1em"><strong>Thank You!</strong></div>');
       } else {
         alert("Please ensure you have entered a valid email address."); 
       }
    });
  });
});
    </script>

</div>
